!!!
%html
  %head
    %title Tracktor
    = stylesheet_link_tag "application", media: "all"
    = csrf_meta_tags
  %body
    .navbar.navbar-static-top
      .navbar-inner
        .container
          %a.brand{href: "/"}
            Issue Tracker
          %ul.nav
            %li
              = link_to "Issues", issues_path
            %li
              = link_to "New issue", new_issue_path
            %li
              = form_tag search_issues_path, class: "navbar-search pull-left" do
                = text_field_tag :query, nil, placeholder: "Search issues", class: "search-query span2"
    .container
      - if flash[:notice]
        %p.text-info=flash[:notice]
      - if flash[:error]
        %p.text-error=flash[:error]
      .row
        - if yield :pagetitle
          %h3.offset3=yield :pagetitle
        #content
          = yield
    = javascript_include_tag "application"
